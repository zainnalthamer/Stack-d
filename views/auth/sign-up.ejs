<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Join STACKD</title>
    <link rel="stylesheet" href="/styles/style.css">
</head>
<body>
    <header>
        <%- include('../partials/navbar') %>
    </header>

    <main>
        <div class="signup-container">
            <form action="/auth/sign-up" method="post" enctype="multipart/form-data">
                <label for="avatarUpload" class="avatar-wrapper">
                    <img id="avatarPreview" src="/images/logo-no-text.png" alt="Default Avatar">
                    <input type="file" id="avatarUpload" name="avatar" accept="image/*" hidden>
                </label>

                <div class="input-row">
                    <input type="text" name="name" placeholder="Name" required>
                    <input type="number" name="age" placeholder="Age" min="6" required>
                </div>

                <div class="input-row">
                    <input type="text" name="username" placeholder="Username" required>
                    <input type="text" name="email" placeholder="Email" required>
                </div>

                <input type="password" name="password" placeholder="Password" required>

                <textarea name="bio" placeholder="Tell us about yourself..."></textarea>

                <button type="submit">Sign Up</button>
                <p class="bottom-link">Already have an account? <a href="/auth/login">Login</a></p>

                <% if (typeof error !== 'undefined' && error) { %>
                    <p class="error"><%= error %></p>
                <% } %>
            </form>
        </div>
    </main>

    <script src="/js/signup.js"></script>
</body>
</html>