<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Dashboard</title>
    <link rel="stylesheet" href="/styles/style.css" />
</head>
<body>
    <%- include('../partials/navbar') %>

    <main class="dashboard">
        <h1 class="welcome">Welcome back, <%= user.name %></h1>

        <a href="/games/new" class="add-game-btn" title="Add New Game"><span>+</span></a>
    </main>

    <section class="game-section">
        <h2>Game Library</h2>
        <div class="game-row">
            <% gameLibrary.forEach(game => { %>
                <a href="/games/<%= game._id %>" class="game-card">
                    <img src="<%= game.image %>" alt="<%= game.title %>">
                </a>
            <% }) %>
        </div>
    </section>

    <% if (favorites.length > 0) { %>
    <section class="game-section">
        <h2>Favorites</h2>
        <div class="game-row">
            <% favorites.forEach(game => { %>
                <a href="/games/<%= game._id %>" class="game-card">
                    <img src="<%= game.image %>" alt="<%= game.title %>">
                </a>
            <% }) %>
        </div>
    </section>
    <% } %>

    <% if (recentlyPlayed.length > 0) { %>
    <section class="game-section">
        <h2>Recently Played</h2>
        <div class="game-row">
            <% recentlyPlayed.forEach(game => { %>
                <a href="/games/<%= game._id %>" class="game-card">
                    <img src="<%= game.image %>" alt="<%= game.title %>">
                </a>
            <% }) %>
        </div>
    </section>
    <% } %>

    <% if (playing.length > 0) { %>
    <section class="game-section">
        <h2>Currently Playing</h2>
        <div class="game-row">
            <% playing.forEach(game => { %>
                <a href="/games/<%= game._id %>" class="game-card">
                    <img src="<%= game.image %>" alt="<%= game.title %>">
                </a>
            <% }) %>
        </div>
    </section>
    <% } %>

    <% if (wantToPlay.length > 0) { %>
    <section class="game-section">
        <h2>Want to Play</h2>
        <div class="game-row">
            <% wantToPlay.forEach(game => { %>
                <a href="/games/<%= game._id %>" class="game-card">
                    <img src="<%= game.image %>" alt="<%= game.title %>">
                </a>
            <% }) %>
        </div>
    </section>
    <% } %>

    <% if (completed.length > 0) { %>
    <section class="game-section">
        <h2>Completed</h2>
        <div class="game-row">
            <% completed.forEach(game => { %>
                <a href="/games/<%= game._id %>" class="game-card">
                    <img src="<%= game.image %>" alt="<%= game.title %>">
                </a>
            <% }) %>
        </div>
    </section>
    <% } %>

    <% if (abandoned.length > 0) { %>
    <section class="game-section">
        <h2>Abandoned</h2>
        <div class="game-row">
            <% abandoned.forEach(game => { %>
                <a href="/games/<%= game._id %>" class="game-card">
                    <img src="<%= game.image %>" alt="<%= game.title %>">
                </a>
            <% }) %>
        </div>
    </section>
    <% } %>
</body>
</html>