<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Dashboard</title>
    <link rel="stylesheet" href="/styles/style.css" />
</head>
<body>
    <%- include('../partials/navbar') %>

    <main class="dashboard">
        <h1 class="welcome">Welcome back, <%= user.name %></h1>

        <a href="/games/new" class="add-game-btn" title="Add New Game"><span>+</span></a>
    </main>

    <section class="game-section">
        <h2>Your Games</h2>
        <div class="game-row">
            <% games.forEach(game => { %>
                <a href="/games/<%= game._id %>" class="game-card">
                    <img src="<%= game.image %>" alt="<%= game.title %>">
                </a>
            <% }) %>
        </div>
    </section>

    <section class="game-section">
        <h2>Favorites</h2>
        <div class="game-row">
        </div>
    </section>

    <section class="game-section">
        <h2>Recently Played</h2>
        <div class="game-row">
        </div>
    </section>

    <section class="game-section">
        <h2>Continue Playing</h2>
        <div class="game-row">
        </div>
    </section>
</body>
</html>